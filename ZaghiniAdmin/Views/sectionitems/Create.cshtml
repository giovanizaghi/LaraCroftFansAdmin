@model ZaghiniAdmin.Models.sectionitem

@{
    ViewBag.Title = "New Item";
}

<div class="z_breadcumb">
    <a href="@Url.Action("Index","SectionItems")">Sections</a><i class="fa fa-angle-double-right fa-fw"></i><a href="#">Edit Section</a><i class="fa fa-angle-double-right fa-fw"></i><a href="#">New Item</a>
</div>

<div class="row">
    <div class="z_panel">
        <div class="z_panel-title">
            <h4>Create Item</h4>
            <div class="clearfix"></div>
        </div>
        <div class="z_panel-content">

            @using (Html.BeginForm())
            {
                <input type="hidden" name="idsection" value="@ViewBag.idsection" />

                <div class="row">
                    <div class="col-lg-12">
                        @Html.Label("Title", htmlAttributes: new { @class = "control-label col-md-12" })
                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <label class="col-md-12">Banner Image</label>
                        <input type="file" name="image" id="txtUploadFile" accept="image/x-png,image/gif,image/jpeg" />
                        <div id="bannerImage" class="image-prev"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <textarea id="formattedText" name="content" style="height: 350px;"></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-3">
                        <span class="default-label">Save As Draft</span>
                    </div>
                    <div class="col-lg-2">
                        <label class="switch">
                            <input type="checkbox" name="active" id="active" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <span class="default-label">Only registered visitors can read</span>
                    </div>
                    <div class="col-lg-2">
                        <label class="switch">
                            <input type="checkbox" name="onlyregistercanread" id="onlyregistercanread" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>

              

                <div class="row" style="text-align: right;">
                    <div class="col-md-11">

                    </div>                    
                    <div class="col-md-1">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            }

        </div>
    </div>
</div>

